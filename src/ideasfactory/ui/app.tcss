/* IdeasFactory Application Styles with scroll improvements and research screen */

Screen {
  background: $surface;
}

BrainstormScreen {
  layout: vertical;
}

DocumentReviewScreen {
  layout: vertical;
}

DeepResearchScreen {
  layout: vertical;
}

ResearchScreen {
  layout: vertical;
}

/* Scrolling containers */
#document_scroll {
  width: 100%;
  height: 100%;
}

#research_scroll {
  width: 100%;
  height: 100%;
}

